@model SCRIPTERS.Core.SmsModel
@{
    ViewBag.Title = "Send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Index", "Help", FormMethod.Post, new { target = "_blank", @title = "Select to get help" }))
{
    <p>
        <input type="hidden" name="action" value="Welcomepage" />
        <button type="submit" style="background:none;border:none;text-decoration:none;cursor:pointer;color:#7985d4">Help</button>
    </p>
}

<h4>Send SMS </h4>

@using (Html.BeginForm(Html.BeginForm("Send", "SMS", FormMethod.Post)))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ToNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.ToNo, new { htmlAttributes = new { @class = "form-control", placeholder="e.g 07816501748" } })
                @Html.ValidationMessageFor(model => model.ToNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SmsBody, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.SmsBody, new { htmlAttributes = new { @class = "form-control",placeholder="e.g Book request xyt" } })
                @Html.ValidationMessageFor(model => model.SmsBody, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" title="Click to send message" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
