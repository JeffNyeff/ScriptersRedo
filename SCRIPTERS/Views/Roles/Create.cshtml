@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Index", "Help", FormMethod.Post, new { target = "_blank", @title = "Select to get help" }))
{
    <p>
        <input type="hidden" name="action" value="users" />
        <button type="submit" style="background:none;border:none;text-decoration:none;cursor:pointer;color:#7985d4">Help</button>
    </p>
}


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Create Role</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" >
            @Html.Label("Name", "Role Title", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" title="Click to create user role" value="Create Role" class="btn btn-success" />
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Go Back", "Index", "Roles")
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

